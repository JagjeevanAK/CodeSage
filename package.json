{
  "name": "debugbuddy",
  "displayName": "Debug Buddy",
  "description": "Debug Buddy is your AI mentor â€” it helps you understand and resolve errors by offering thoughtful suggestions, encouraging you to think instead of instantly solving everything for you.",
  "publisher": "JagjeevanKashid",
  "version": "0.2.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JagjeevanAK/DebugBuddy.git"
  },
  "homepage": "https://github.com/JagjeevanAK/DebugBuddy",
  "bugs": {
    "url": "https://github.com/JagjeevanAK/DebugBuddy/issues"
  },
  "keywords": [
    "ai",
    "code-review",
    "error-analysis",
    "debugging",
    "code-assistant",
    "artificial-intelligence",
    "openai",
    "anthropic",
    "gemini"
  ],
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "icon": "./public/icon.png",
  "contributes": {
    "commands": [
      {
        "command": "DebugBuddy.setApiKey",
        "title": "Set API Key for DebugBuddy"
      },
      {
        "command": "DebugBuddy.getApiKey",
        "title": "Show API Key of DebugBuddy"
      },
      {
        "command": "DebugBuddy.deleteKey",
        "title": "Delete API Key of DebugBuddy"
      },
      {
        "command": "DebugBuddy.reviewCurrentFile",
        "title": "Review Current File with DebugBuddy"
      },
      {
        "command": "DebugBuddy.showWebview",
        "title": "Show DebugBuddy Webview"
      },
      {
        "command": "DebugBuddy.hideWebview",
        "title": "Hide DebugBuddy Webview"
      },
      {
        "command": "DebugBuddy.refreshWebview",
        "title": "Refresh DebugBuddy Webview"
      },
      {
        "command": "DebugBuddy.clearWebview",
        "title": "Clear DebugBuddy Webview"
      },
      {
        "command": "DebugBuddy.showWebviewHistory",
        "title": "Show DebugBuddy Webview History"
      },
      {
        "command": "DebugBuddy.webviewHealthCheck",
        "title": "DebugBuddy Webview Health Check"
      },
      {
        "command": "DebugBuddy.showErrorLog",
        "title": "Show DebugBuddy Error Log"
      },
      {
        "command": "DebugBuddy.showPromptConfiguration",
        "title": "Show DebugBuddy Prompt Configuration"
      },
      {
        "command": "DebugBuddy.openPromptSettings",
        "title": "Open DebugBuddy Prompt Settings"
      },
      {
        "command": "DebugBuddy.validatePromptConfiguration",
        "title": "Validate DebugBuddy Prompt Configuration"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorTextFocus",
          "command": "DebugBuddy.reviewCurrentFile",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "DebugBuddy.showWebview",
          "when": "true"
        },
        {
          "command": "DebugBuddy.hideWebview",
          "when": "true"
        },
        {
          "command": "DebugBuddy.refreshWebview",
          "when": "true"
        },
        {
          "command": "DebugBuddy.clearWebview",
          "when": "true"
        },
        {
          "command": "DebugBuddy.showWebviewHistory",
          "when": "true"
        },
        {
          "command": "DebugBuddy.webviewHealthCheck",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "DebugBuddy",
      "properties": {
        "DebugBuddy.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for DebugBuddy AI explanations",
          "scope": "application"
        },
        "DebugBuddy.model": {
          "type": "string",
          "default": "",
          "description": "AI model to use for explanations",
          "scope": "application"
        },
        "DebugBuddy.useWebview": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable webview for AI responses"
        },
        "DebugBuddy.webviewPosition": {
          "type": "string",
          "enum": [
            "beside",
            "active",
            "one",
            "two",
            "three"
          ],
          "default": "beside",
          "description": "Position where webview should open"
        },
        "DebugBuddy.webviewRetainContext": {
          "type": "boolean",
          "default": true,
          "description": "Keep webview content when hidden"
        },
        "DebugBuddy.webviewAutoShow": {
          "type": "boolean",
          "default": true,
          "description": "Automatically show webview when AI responses are generated"
        },
        "DebugBuddy.prompts.experienceLevel": {
          "type": "string",
          "enum": [
            "beginner",
            "intermediate",
            "advanced"
          ],
          "default": "intermediate",
          "description": "Experience level for AI responses (affects complexity and explanation depth)"
        },
        "DebugBuddy.prompts.maxSuggestions": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 20,
          "description": "Maximum number of suggestions to include in AI responses"
        },
        "DebugBuddy.prompts.includeExplanations": {
          "type": "boolean",
          "default": true,
          "description": "Include detailed explanations in AI responses"
        },
        "DebugBuddy.prompts.customFocusAreas": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Custom focus areas for code analysis (e.g., 'performance', 'security', 'readability')"
        },
        "DebugBuddy.prompts.outputVerbosity": {
          "type": "string",
          "enum": [
            "minimal",
            "standard",
            "detailed"
          ],
          "default": "standard",
          "description": "Verbosity level for AI responses"
        },
        "DebugBuddy.prompts.enablePromptSystem": {
          "type": "boolean",
          "default": true,
          "description": "Enable the JSON prompt system for structured AI interactions"
        },
        "DebugBuddy.prompts.directory": {
          "type": "string",
          "default": "",
          "description": "Custom directory path for additional prompt templates (relative to workspace root)"
        },
        "DebugBuddy.prompts.cachePrompts": {
          "type": "boolean",
          "default": true,
          "description": "Cache loaded prompt templates for better performance"
        },
        "DebugBuddy.prompts.configs": {
          "type": "object",
          "default": {},
          "description": "Configuration settings for individual prompt templates",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "enabled": {
                "type": "boolean",
                "default": true
              },
              "priority": {
                "type": "number",
                "default": 1
              },
              "customSettings": {
                "type": "object",
                "default": {}
              },
              "overrides": {
                "type": "object",
                "default": {}
              }
            }
          }
        },
        "DebugBuddy.prompts.configVersion": {
          "type": "string",
          "default": "1.0.0",
          "description": "Internal configuration version for migration purposes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out && cp -r src/prompt/templates/*.json out/prompt/templates/",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/highlight.js": "^10.1.0",
    "@types/markdown-it": "^14.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.9",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "highlight.js": "^11.11.1",
    "markdown-it": "^14.1.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/google": "^1.2.22",
    "@ai-sdk/groq": "^2.0.2",
    "@ai-sdk/openai": "^1.3.23",
    "@ai-sdk/xai": "^1.2.18",
    "ai": "^4.3.19",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  }
}
