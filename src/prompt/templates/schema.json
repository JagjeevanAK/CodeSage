{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON Prompt Template Schema",
  "type": "object",
  "required": ["id", "name", "description", "category", "version", "template", "config", "schema_version"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the prompt"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for the prompt"
    },
    "description": {
      "type": "string",
      "description": "Description of what this prompt does"
    },
    "category": {
      "type": "string",
      "enum": [
        "code_review",
        "debug_analysis", 
        "refactoring",
        "documentation",
        "security_analysis",
        "performance_analysis",
        "test_generation",
        "code_explanation",
        "general"
      ]
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "author": {
      "type": "string"
    },
    "created_date": {
      "type": "string",
      "format": "date"
    },
    "last_modified": {
      "type": "string",
      "format": "date"
    },
    "template": {
      "type": "object",
      "required": ["task", "context", "instructions", "output_format", "variables"],
      "properties": {
        "task": {
          "type": "string",
          "description": "The main task this prompt performs"
        },
        "language": {
          "type": "string",
          "description": "Programming language (optional, can be auto-detected)"
        },
        "context": {
          "type": "object",
          "description": "Context information for the prompt"
        },
        "instructions": {
          "type": "string",
          "description": "Detailed instructions for the AI"
        },
        "output_format": {
          "type": "object",
          "required": ["structure"],
          "properties": {
            "structure": {
              "type": "string"
            },
            "include_line_numbers": {
              "type": "boolean"
            },
            "include_severity": {
              "type": "boolean"
            },
            "include_explanation": {
              "type": "boolean"
            },
            "include_fix_suggestion": {
              "type": "boolean"
            }
          }
        },
        "variables": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of variables that can be substituted in this template"
        }
      }
    },
    "config": {
      "type": "object",
      "required": ["configurable_fields", "default_values", "validation_rules"],
      "properties": {
        "configurable_fields": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "default_values": {
          "type": "object"
        },
        "validation_rules": {
          "type": "object"
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "supported_languages": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "required_context": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "performance_notes": {
          "type": "string"
        }
      }
    },
    "schema_version": {
      "type": "string",
      "description": "Version of the schema this prompt follows"
    }
  }
}